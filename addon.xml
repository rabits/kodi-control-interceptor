<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.rabits.control-interceptor"
       name="Control Interceptor"
       version="0.8.0"
       provider-name="Rabit">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>
    <extension point="xbmc.service" library="service.py" start="login"/>
    <extension point="xbmc.addon.metadata">
        <news></news>
        <assets>
            <icon>icon.png</icon>
        </assets>
        <summary lang="en">Kodi service to intercept the control (Kore) jsonrpc requests.</summary>
        <description lang="en">This service just forwards the jsonrpc requests and other web requests (images) to the original Kodi control web server (Services-&gt;Control-&gt;Allow remote control via HTTP).</description>
        <disclaimer lang="en">Feel free to use this script. For information visit kodi.tv</disclaimer>
        <platform>all</platform>
        <license>Apache-2.0</license>
        <forum></forum>
        <website>https://github.com/rabits/kodi-control-interceptor</website>
        <email></email>
        <source>https://github.com/rabits/kodi-control-interceptor</source>
    </extension>
</addon>
